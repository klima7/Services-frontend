<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.klima7.services.client.features.newjob.newjob.NewJobViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Nowe zlecenie"
            app:subtitle="@{viewmodel.subtitle}"
            style="@style/ToolBar"
            />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <com.klima7.services.client.ui.NewJobProgressView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:njp_position="@{viewmodel.position}"
                    app:njp_message="Wybierz usługę"
                    />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/home_nav_host_fragment"
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:navGraph="@navigation/nav_graph_new_job"
                    />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>