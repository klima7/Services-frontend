<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewmodel"
            type="com.klima7.services.client.features.newjob.jobdetails.JobDetailsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/service_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Nowe zlecenie"
            app:subtitle="Składanie mebli"
            app:navigationIcon="@drawable/icon_arrow_back"
            style="@style/ToolBar" />

        <com.klima7.services.common.components.views.LoadAreaView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:la_state="@{viewmodel.loadState}"
            app:la_failure="@{viewmodel.loadFailure}"
            app:la_onRefresh="@{() -> viewmodel.refresh()}"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <com.klima7.services.client.ui.NewJobProgressView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:njp_position="3"
                            app:njp_message="Uzupełnij szczegóły oferty"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="16dp"
                            >

                            <!-- Description -->
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:hint="Opis"
                                app:counterEnabled="true"
                                app:counterMaxLength="500"
                                style="@style/TextInputLayoutStyle">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:gravity="top"
                                    android:inputType="textMultiLine"
                                    android:maxLength="500"
                                    android:overScrollMode="always"
                                    android:padding="25dp"
                                    android:scrollbarStyle="insideInset"
                                    android:scrollbars="vertical"
                                    android:text="@={viewmodel.description}" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- Description -->
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:hint="Czas realizacji"
                                app:counterEnabled="true"
                                app:counterMaxLength="200"
                                style="@style/TextInputLayoutStyle">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:gravity="top"
                                    android:inputType="textMultiLine"
                                    android:maxLength="500"
                                    android:overScrollMode="always"
                                    android:padding="25dp"
                                    android:scrollbarStyle="insideInset"
                                    android:scrollbars="vertical"
                                    android:text="@={viewmodel.realizationTime}" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <Button
                    android:id="@+id/jobdetails_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/bottom_button_horizontal_margin"
                    android:layout_marginBottom="@dimen/bottom_button_bottom_margin"
                    android:text="Utwórz zlecenie"
                    android:background="@drawable/rounded_button"
                    />

            </LinearLayout>

        </com.klima7.services.common.components.views.LoadAreaView>

    </LinearLayout>

</layout>