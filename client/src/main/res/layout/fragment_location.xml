<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewmodel"
            type="com.klima7.services.client.features.newjob.location.LocationViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/service_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Nowe zlecenie"
            app:subtitle="@{viewmodel.serviceName!=null ? viewmodel.serviceName : `...`}"
            app:navigationIcon="@drawable/icon_arrow_back"
            style="@style/ToolBar" />

        <com.klima7.services.common.components.views.LoadAreaView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:la_state="@{viewmodel.loadState}"
            app:la_failure="@{viewmodel.loadFailure}"
            app:la_onRefresh="@{() -> viewmodel.refresh()}"
            >

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <com.klima7.services.client.ui.NewJobProgressView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:njp_position="2"
                        app:njp_message="Wybierz lokalizacjÄ™"
                        />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/job_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#E4E4E4"
                        >

                        <androidx.fragment.app.FragmentContainerView
                            android:id="@+id/location_autocomplete_fragment"
                            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="32dp"
                        android:gravity="center_vertical"
                        android:visibility="@{viewmodel.lastLocationsVisible ? View.VISIBLE : View.GONE}"
                        >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/icon_last_locations"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Ostatnie lokalizacje"
                            />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/location_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </com.klima7.services.common.components.views.LoadAreaView>

    </LinearLayout>

</layout>