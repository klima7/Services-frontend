<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewmodel"
            type="com.klima7.services.client.features.settings.SettingsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ToolBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.klima7.services.common.components.views.SettingsTileView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:settingstile_title="Zmiana profilu"
                    app:settingstile_icon="@drawable/icon_profile"
                    app:settingstile_action="@{() -> viewmodel.profileClicked()}"
                    />

                <com.klima7.services.common.components.views.SettingsTileView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:settingstile_title="Usuń konto klienta"
                    app:settingstile_icon="@drawable/icon_delete_account"
                    app:settingstile_action="@{() -> viewmodel.deleteClicked()}"
                    />

                <com.klima7.services.common.components.views.SettingsTileView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:settingstile_title="Wyloguj się"
                    app:settingstile_icon="@drawable/icon_logout"
                    app:settingstile_action="@{() -> viewmodel.signOutClicked()}"
                    />

            </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>