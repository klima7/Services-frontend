<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginTheme" parent="FirebaseUI">

    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorSecondary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="startIconTint">?attr/colorPrimary</item>
    </style>

    <style name="ToolBarTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="ToolBar">
        <item name="android:background">@drawable/toolbar_rounded_background</item>
        <item name="android:theme">@style/ToolBarTheme</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="Button.Red" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@android:color/holo_red_light</item>
    </style>

    <!-- Message clouds -->
    <style name="LeftMessageCloud" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/LeftMessageCloud.Overlay</item>
    </style>

    <style name="LeftMessageCloud.Overlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>