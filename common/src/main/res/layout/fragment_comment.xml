<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewmodel"
            type="com.klima7.services.common.components.comment.CommentViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/comment_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Komentarz"
            app:subtitle="@{`Dotyczy: ` + viewmodel.subtitle}"
            app:navigationIcon="@drawable/icon_arrow_back"
            style="@style/ToolBar"
            />

        <com.klima7.services.common.components.views.LoadAreaView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:la_state="@{viewmodel.loadState}"
            app:la_failure="@{viewmodel.loadFailure}"
            app:la_onRefresh="@{() -> viewmodel.refresh()}"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="16dp" />

                    <com.klima7.services.common.components.views.RatingView
                        android:id="@+id/comment_rating_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:rating_rating="@{viewmodel.rating}"
                        />

                </LinearLayout>

            </ScrollView>

        </com.klima7.services.common.components.views.LoadAreaView>

    </LinearLayout>

</layout>