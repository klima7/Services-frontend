<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.klima7.services.common.components.profile.ProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Czy jesteś pewien, że chcesz usunąć konto wykonawcy? Operacja ta jest nieodwracalna."
                    />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="W celu potwierdzenia operacji wpisz “Potwierdzam” w polu poniżej."
                    />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="16dp" />

                <!-- Confirm field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/info_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="Numer telefonu"
                    app:helperText=" "
                    app:startIconDrawable="@drawable/icon_phone"
                    style="@style/TextInputLayoutStyle"
                    app:boxStrokeColor="#ff0000">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789+"
                        android:inputType="phone"
                        android:maxLength="9"
                        android:text="" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/delete_save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/bottom_button_horizontal_margin"
            android:layout_marginBottom="@dimen/bottom_button_bottom_margin"
            android:enabled="true"
            android:text="Usuń konto"
            android:background="@drawable/rounded_delete_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>