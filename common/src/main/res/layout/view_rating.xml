<?xml version="1.0" encoding="utf-8"?>

<layout>

    <FrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <com.klima7.services.common.ui.avatar.AvatarView
                android:id="@+id/rating_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                />

            <TextView
                android:id="@+id/rating_service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service name"
                />

            <TextView
                android:id="@+id/rating_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                />

            <com.willy.ratingbar.BaseRatingBar
                android:id="@+id/rating_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srb_numStars="5"
                app:srb_minimumStars="0"
                app:srb_rating="0"
                app:srb_starWidth="50dp"
                app:srb_starHeight="50dp"
                app:srb_starPadding="10dp"
                app:srb_stepSize="0.01"
                app:srb_isIndicator="true"
                app:srb_clickable="true"
                app:srb_scrollable="true"
                app:srb_clearRatingEnabled="false"
                app:srb_drawableEmpty="@drawable/icon_star_empty"
                app:srb_drawableFilled="@drawable/icon_star_filled"
                android:layout_gravity="center">
            </com.willy.ratingbar.BaseRatingBar>

        </LinearLayout>

    </FrameLayout>

</layout>