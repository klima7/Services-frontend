<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewmodel"
            type="com.klima7.services.common.components.profile.comments.ProfileCommentsViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/profile_area_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/part_profile_header"
            app:title="@{`Ostatnie komentarze`}"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@{@string/comments_count(viewmodel.commentsCount)}"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <fragment
                android:id="@+id/profile_comments_latest_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.klima7.services.common.components.profile.comments.ProfileCommentsLatestFragment" />

        </FrameLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Zobacz wszystkie"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            app:icon="@drawable/icon_more"
            android:textColor="@color/black"
            app:iconTint="@color/black"
            android:onClick="@{() -> viewmodel.showAllCommentsClicked()}"
            android:visibility="@{viewmodel.showMoreVisible ? View.VISIBLE : View.GONE}"
            />

    </LinearLayout>

</layout>