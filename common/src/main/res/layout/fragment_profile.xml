<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.klima7.services.common.ui.profile.ProfileContentViewModel" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="16dp">

            <LinearLayout
                android:id="@+id/profile_avatar_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.klima7.services.common.ui.avatar.AvatarView
                    android:id="@+id/info_avatar_view"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@{viewmodel.expert.info.name}"
                    tools:text="Name"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="21sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@{viewmodel.expert.info.company}"
                    tools:text="Company"
                    android:textSize="18sp"/>

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="32dp" />

            <LinearLayout
                android:id="@+id/profile_description_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/part_profile_header"
                    app:title="@{`Opis`}"
                    android:layout_marginBottom="8dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@{viewmodel.expert.info.description}"
                    android:layout_marginHorizontal="16dp"
                    />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="32dp" />

            <LinearLayout
                android:id="@+id/profile_contact_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    layout="@layout/part_profile_header"
                    app:title="@{`Kontakt`}"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Numer telefonu"
                        android:layout_marginHorizontal="16dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@{viewmodel.expert.info.phone}"
                        android:layout_marginHorizontal="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Adres email"
                        android:layout_marginHorizontal="16dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@{viewmodel.expert.info.email}"
                        android:layout_marginHorizontal="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Strona internetowa"
                        android:layout_marginHorizontal="16dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@{viewmodel.expert.info.website}"
                        android:layout_marginHorizontal="16dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="32dp" />

            <LinearLayout
                android:id="@+id/profile_services_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/part_profile_header"
                    app:title="@{`Świadczone usługi`}"
                    android:layout_marginBottom="8dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>