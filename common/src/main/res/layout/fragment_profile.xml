<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.klima7.services.common.ui.profile.ProfileViewModel" />
    </data>

    <ScrollView
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="16dp">

            <fragment
                android:id="@+id/profile_header_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.klima7.services.common.ui.profile.header.ProfileHeaderFragment" />

            <Space
                android:layout_width="0dp"
                android:layout_height="32dp" />

            <LinearLayout
                android:id="@+id/profile_description_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/part_profile_header"
                    app:title="@{`Opis`}"
                    android:layout_marginBottom="8dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@{viewmodel.expert.info.description}"
                    android:layout_marginHorizontal="16dp"
                    />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="32dp" />

            <fragment
                android:id="@+id/profile_contact_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.klima7.services.common.ui.profile.contact.ProfileContactFragment"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="32dp" />

            <fragment
                android:id="@+id/profile_services_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.klima7.services.common.ui.profile.services.ProfileServicesFragment"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="32dp" />

            <fragment
                android:id="@+id/profile_area_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.klima7.services.common.ui.profile.area.ProfileAreaFragment"
                />

        </LinearLayout>

    </ScrollView>

</layout>