<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewmodel"
            type="com.klima7.services.expert.features.services.category.ServicesCategoryViewModel" />
    </data>

    <com.robertlevonyan.views.expandable.Expandable
        android:id="@+id/services_category_expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:exp_animateExpand="true">

        <TextView
            android:id="@+id/services_category_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@{viewmodel.name}"
            tools:text="Header"
            android:textSize="22sp"
            android:layout_marginLeft="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.klima7.services.common.lib.wclv.WrapContentListView
                android:id="@+id/services_category_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </com.klima7.services.common.lib.wclv.WrapContentListView>

        </LinearLayout>

    </com.robertlevonyan.views.expandable.Expandable>

</layout>