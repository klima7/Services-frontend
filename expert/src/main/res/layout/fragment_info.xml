<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="com.klima7.services.expert.features.info.InfoViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/info_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Zmiana profilu"
            app:navigationIcon="@drawable/icon_arrow_back"
            style="@style/ToolBar"
            />

        <com.klima7.services.common.components.views.LoadAreaView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:la_state="@{viewmodel.loadState}"
            app:la_failure="@{viewmodel.loadFailure}"
            app:la_onRefresh="@{()->viewmodel.refresh()}"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ScrollView
                    android:id="@+id/scrollView3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.klima7.services.common.components.views.AvatarView
                                android:id="@+id/info_avatar_view"
                                android:layout_width="120dp"
                                android:layout_height="120dp" />

                            <Space
                                android:layout_width="16dp"
                                android:layout_height="0dp" />

                            <TableLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >

                                <TableRow
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" >

                                    <Button
                                        android:id="@+id/button3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/rounded_button"
                                        android:onClick="@{() -> viewmodel.changeProfileImageClicked()}"
                                        android:text="Zmień zdjęcie"
                                        android:paddingHorizontal="35dp"
                                        />

                                </TableRow>

                                <TableRow
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="@{viewmodel.deleteImageVisible ? View.VISIBLE : View.GONE}">

                                    <Button
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="16dp"
                                        android:background="@drawable/rounded_button"
                                        android:onClick="@{() -> viewmodel.deleteProfileImageClicked()}"
                                        android:text="Usuń zdjęcie" />

                                </TableRow>

                                <TableRow
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="@{viewmodel.restoreImageVisible ? View.VISIBLE : View.GONE}">

                                    <Button
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="16dp"
                                        android:background="@drawable/rounded_button"
                                        android:onClick="@{() -> viewmodel.restoreProfileImageClicked()}"
                                        android:text="Przywróć zdjęcie" />

                                </TableRow>

                            </TableLayout>

                        </LinearLayout>

                        <!-- Name-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/info_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:hint="Imie i nazwisko"
                            app:helperText="Pole wymagane"
                            app:startIconDrawable="@drawable/icon_person"
                            style="@style/TextInputLayoutStyle">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="40"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="@={viewmodel.name}" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Company-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/info_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:hint="Firma"
                            app:helperText=" "
                            app:startIconDrawable="@drawable/icon_company"
                            style="@style/TextInputLayoutStyle">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="40"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="@={viewmodel.company}" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Description -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/info_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:hint="Opis"
                            app:counterEnabled="true"
                            app:counterMaxLength="500"
                            app:helperText=" "
                            app:startIconDrawable="@drawable/icon_description"
                            style="@style/TextInputLayoutStyle">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/shipper_field"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:gravity="top"
                                android:inputType="textMultiLine"
                                android:maxLength="500"
                                android:overScrollMode="always"
                                android:padding="25dp"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:text="@={viewmodel.description}" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Phone -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/info_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:hint="Numer telefonu"
                            app:helperText=" "
                            app:startIconDrawable="@drawable/icon_phone"
                            style="@style/TextInputLayoutStyle" >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="0123456789+"
                                android:inputType="phone"
                                android:maxLength="9"
                                android:text="@={viewmodel.phone}" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Email -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/info_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:hint="Adres email"
                            app:helperText=" "
                            app:startIconDrawable="@drawable/icon_email"
                            style="@style/TextInputLayoutStyle" >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="50"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="@={viewmodel.email}" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Website -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/info_website"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:hint="Strona internetowa"
                            app:helperText=" "
                            app:startIconDrawable="@drawable/icon_website"
                            style="@style/TextInputLayoutStyle" >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="200"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="@={viewmodel.website}" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </ScrollView>

                <Button
                    android:id="@+id/services_save_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/bottom_button_horizontal_margin"
                    android:layout_marginBottom="@dimen/bottom_button_bottom_margin"
                    android:enabled="@{viewmodel.saveButtonEnabled}"
                    android:onClick="@{() -> viewmodel.saveClicked()}"
                    android:text="Zapisz"
                    android:background="@drawable/rounded_button"
                    />

            </LinearLayout>

        </com.klima7.services.common.components.views.LoadAreaView>

    </LinearLayout>

</layout>